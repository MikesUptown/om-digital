/*----------------------*/ 
/*   10-CONTACT         */ 
/*----------------------*/

.contacts-wrap
	padding-top 60px
	padding-bottom 30px
	position relative
	
.contact-item
	position relative
	padding-left 70px
	display inline-block
	margin-bottom 30px
	p
		margin-bottom 0
		text-align left
		color $text
	i
		position absolute
		top 50%
		left 0
		margin-top -21px
		font-size 45px
		color $lblack
.map
	width 100%
	height 735px
	
@media (max-width: 768px)
	.map
		height 400px

/*----------------------*/ 
/*   11-ABOUT US        */ 
/*----------------------*/

.info-block-wrap
	position relative
	.info-block
		background-color $white
		box-shadow 0px 0px 50px 0px rgba($black,.15)
		margin-top 95px
		padding 80px
		color $lblack
		h3
			text-transform uppercase
			margin-top 0
			margin-bottom 40px
			color $lblack
	.image-block
		position absolute
		top 0
		bottom 95px
		right 0
		margin-right 15px
		margin-left 15px
		z-index -1
		background-size cover
		background-position center center
		background-repeat no-repeat
	.owl-item
		padding-right 20px
	.owl-dots
		display block
		margin-top 20px
		.owl-dot
			display inline-block
			height 8px
			width 8px
			border-radius 50%
			background-color transparent
			border 1px solid $lblack
			margin-right 8px
			&.active
				background-color $lblack
				transform scale(1.5)

.love-block
	text-align center
	margin 100px 0
	h2
		text-transform uppercase
		i
			font-size 48px
			transition all .25s ease-in-out
			animation heartbeat 2s infinite

@keyframes heartbeat
	0%
		opacity 1
	14%
		opacity 0.3
	28%
		opacity 1
	42%
		opacity 0.3
	70%
		opacity 1
			
@media (max-width: 992px)
	.info-block-wrap
		.info-block
			margin-top 0
		.image-block
			position static
			height 500px

@media (max-width: 768px)
	.love-block
		h2
			font-size 24px
			i
				font-size 36px
				
@media (max-width: 480px)
	.info-block-wrap
		.image-block
			height 400px
		.info-block
			padding 40px


