/*----------------------*/ 
/*   01-IMPORT FONTS    */ 
/*----------------------*/

@import url('https://fonts.googleapis.com/css?family=Archivo+Black')
@import url('https://fonts.googleapis.com/css?family=Roboto:400,300,400italic,700')

@import ('crazy.css')

@require 'shortcodes.styl'

/*----------------------*/ 
/*   02-VARIABLES       */ 
/*----------------------*/

$f1 = 'Roboto', sans-serif
$f2 = 'Archivo Black', sans-serif
$white = #ffffff
$black = #171717
$lblack = #161616
$cyan = #0de7cb
$blue = #020033
$yellow = #fdedc5
$pink = #f1cdde
$text = #393939

/*----------------------*/ 
/*   03-ALL STYLES      */ 
/*----------------------*/
	
$frame-wh = 30px

.frame-line
	position fixed
	left 0
	right 0
	display block
	background $cyan
	z-index 888
	&.top-frame
		height $frame-wh
		top -($frame-wh)
	&.bottom-frame
		height $frame-wh
		bottom -($frame-wh)
	&.right-frame
		width $frame-wh
		right -($frame-wh)
		height 100%
		left auto
		top 0
	&.left-frame
		width $frame-wh
		left -($frame-wh)
		height 100%
		right auto
		top 0
	&.animated
		transition all .35s ease-in-out
		&.top-frame
			top 0
		&.bottom-frame
			bottom 0
		&.right-frame
			right 0
		&.left-frame
			left 0	

body
	background-color $white
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	position relative
	min-width 320px
	font-family $f1
	line-height 1.8
	font-size 16px
	letter-spacing 0.5px
	color $text
	margin 30px

@media only screen and (max-width: 768px)
	.frame-line
		display none
	body
		margin 0 !important
		
a
	text-decoration none
	color inherit
	transition color .3s ease-in-out, background-color .2s ease-in-out
	&:hover, &:focus
		text-decoration none
		outline none
	&:hover
		color $cyan
		text-decoration underline

h1, h2, h3, h4, h5, h6
	font-weight 600
	line-height 2em
	font-family $f2
	margin 15px 0
	color $black

h1
	font-size 40px
	
h2
	font-size 36px

h3
	font-size 28px

h4
	font-size 24px

h5
	font-size 18px

h6
	font-size 16px

h4, h5, h6
	font-family $f1	

p
	margin 0 0 20px 0
	padding 0

b,
strong
	font-weight 700
	
i, em
	font-style italic

ul, ol
	&.list-none
		list-style-type none
		padding 0
		margin 0
		
img
	border 0
	height auto
	max-width: 100%
	vertical-align middle

blockquote
	border-left 1px solid $lblack
	font-style italic
	color $lblack
	display block
	margin 40px 0
	padding-left 30px
	&::after
		content ''
		clear both
		display table

.btn
	display inline-block
	text-transform uppercase
	text-align center
	color $black
	font-size 16px
	font-weight 700
	padding 20px 70px
	position relative
	outline none
	background-color transparent
	border 3px solid $lblack
	span
		position relative
		z-index 2
	&::after
		content ''
		background-color $lblack
		top 0
		left 0
		right 0
		height 0
		position absolute
		z-index 1
		transition all .2s ease-in-out
		
.btn:hover
	color $white
	text-decoration none
	&::after
		height 100%

.btn-white
	color $white
	border-color $white
	&::after
		background-color $white
	&:hover
		color $black

.btn:focus
	outline none
	
.btn.disable
	cursor default		

.btn.line-vert
	&::before
		content ''
		display block
		position absolute
		width 1px
		height 100%
		top -85%
		left 50%
		z-index 22
		background-color $cyan
		transition all .2s ease-in-out
	&:hover::before
		top 85%
		
.btn.line-hor
	&::before
		content ''
		display block
		position absolute
		width 80px
		height 1px
		top 50%
		left 100%
		z-index 22
		margin-left -10px
		background-color $cyan
		transition all .2s ease-in-out
	&:hover::before
		left -70px
		margin-left 0


@media (max-width: 480px)
	.btn
		padding 12px 40px

.btn-play
	height 80px
	width 80px
	padding 0
	line-height 80px

.form-control
	position relative
	
input, textarea
	border none
	border-bottom 1px solid $white
	border-top none
	border-left none
	border-right none
	outline none
	display block
	width 100%
	max-width 100%
	background-color transparent
	padding 13px 15px
	color $white
	&:focus + .line-input
		transform scaleX(1)

.line-input
	position absolute
	bottom 0
	height 1px
	left 0
	right 0
	background-color $cyan
	transform scaleX(0)
	transition all .35s ease-in-out

.form-black
	input, textarea
		color $black
		border-color $black

.jarallax
	position relative
	background-size cover
	background-repeat no-repeat
	background-position 50% 50%

.tlt
	visibility hidden

.overlay
	position absolute
	width 100%
	top 0
	left 0
	height 100%
	z-index 1
	background-color rgba($black,.90)
	~ .container
		position relative
		z-index 5

.sep-line
	display block
	position relative
	&::after
		content ''
		top 0
		position absolute
		left 0
		right 0
		display block
		height 3px
		background-color $lblack
		
@media (min-width: 1500px)
	.sep-line::after
		left -100px !important
		right -100px !important

/*----------------------*/ 
/*   04-TO TOP          */ 
/*----------------------*/

.crazy-loading
	background-color transparent
	position fixed
	top 50%
	left 50%
	margin-left -25px
	margin-top -25px
	height 50px
	width 50px
	border-radius 50%
	border-top 3px solid $lblack
	animation fa-spin 2s infinite linear
	
/*----------------------*/ 
/*   05-PRELOADER       */ 
/*----------------------*/

.toTop
	height 40px
	width 40px
	position fixed
	bottom 30px
	right 30px
	background-color $lblack
	color $white
	overflow hidden	
	text-align center
	opacity 0
	visibility hidden
	line-height 40px
	z-index 666
	transition opacity 0.3s 0s, visibility 0s 0.3s
	&:hover
		text-decoration none
		i
			animation animateIconTop 0.3s forwards
		
.toTop.cd-is-visible,
.toTop.cd-top.cd-fade-out
	transition opacity 0.3s 0s, visibility 0s 0s
  
.cd-is-visible
	visibility visible
	opacity 1

.cd-top.cd-fade-out
	opacity 0.5


@media (max-width: 768px)
	.toTop
		display none

/*----------------------*/ 
/*   06-MENU            */ 
/*----------------------*/
.crazy-navbar
	position absolute
	top 0
	left 0
	right 0
	z-index 100
	.container
		position relative

.crazy-logo
	float left
	line-height 122px

.crazy-nav
	float right

.sf-menu
	list-style none

.sf-menu li
	position relative
	
.sf-menu > li
	padding 45px 0
	
.sf-menu ul 
	position absolute
	display none
	list-style-type none
	padding 0
	margin 0
	top calc(100% - 3px)
	min-width 200px
	padding 25px
	left 0
	z-index 99
	background-color $white
	border-top 3px solid $cyan
	li
		a
			display block
			text-transform uppercase
			color $white
			line-height 35px
			&:hover
				text-decoration none
				color $cyan

@keyframes fadeMenu
	0%
		transform translateY(10px)
		opacity 0
	100%
		transform translateY(0)
		opacity 1

.sf-menu > li
	float left

.sf-menu li:hover > ul,
.sf-menu li.sfHover > ul
	display block
	animation fadeMenu .25s forwards

.sf-menu a
	display block
	position relative

.sf-menu ul ul
	top 0
	left 100%

.sf-menu
	margin 0
	padding 0
	> li
		margin-left 38px
		> a
			font-size 16px
			display block
			font-weight 700
			text-transform uppercase
			color $white
			position relative
			padding 2px 0
			&::after
				content ''
				position absolute
				bottom 0
				left 0
				height 3px
				display block
				width 0
				background-color $cyan
				transition all .35s ease-in-out
			&:hover
				text-decoration none		
		&:hover > a::after, &.current-menu-item > a::after, &.sfHover > a::after
			width 24px
		> ul > li a
			color $lblack
			
.crazy-border
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	z-index -1
	border-bottom 3px solid $white
	
@media (min-width: 1500px)
	.crazy-border
		left -100px
		right -100px

.mobile-menu-wrap
	display none
	position relative
	z-index 888
	nav
		background-color $white
		border-bottom 3px solid $cyan
		ul
			margin 0
			padding 15px
			li
				padding 5px 0
				> a
					display block
					color $black
				&:hover >a, &.current-menu-item >a
					color $cyan
					text-decoration none
				&:hover > ul
					display block
				ul
					list-style-type none
					padding 0
					margin 0
					display none
				

.open-menu
	float right
	display none
	text-align center
	position relative
	line-height 122px
	z-index 222
	&.isActive	
		.burger-icon i
			background-color transparent
			&::before
				transform translateY(8px) rotate(45deg)
			&::after
				transform translateY(-8px) rotate(-45deg)	
				
$gb = 8px

.burger-icon
	display inline-block
	position relative
	z-index 1
	top 5px
	
.burger-icon i
	position relative
	margin-top $gb
	margin-bottom $gb
	&, &::before, &::after
		width 30px
		height 3px
		background-color $white
		display block
		transition-duration .3s
		transition-property background-color, transform

.burger-icon i
	&::before, &::after
		content ''
		position absolute

.burger-icon i::before
	top -($gb)
	
.burger-icon i::after
	top $gb
	
@media (max-width: 992px)
	.open-menu
		display block
	.crazy-nav
		display none

