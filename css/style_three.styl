	padding-top 260px
	overflow hidden
	position relative
	background-position center center	
	h1, h1 span
		font-size 60px
		min-height 60px
		text-transform uppercase
		margin-bottom 30px
		line-height 1em
		color $white
	h1 span
		color $cyan
	em
		color $white
	.buttons
		.btn
			margin 0
			
.goto
	position relative
	padding 50px 0
	a
		color $white
		text-transform uppercase
		font-weight 700
		margin 0 15px
		&:hover
			color $cyan
			text-decoration none

@media (max-width: 992px)
	.title-home
		h1, h1 span
			font-size 48px
			min-height 48px

@media (max-width: 768px)
	.title-home
		h1, h1 span
			font-size 34px
			min-height 34px
	.goto
		display none


@media (max-width: 480px)
	.buttons
		.btn
			display block

.page-title
	position relative
	overflow hidden
	padding 260px 0 150px 0
	background-size cover
	background-position center center
	background-repeat no-repeat
	h1
		font-size 60px
		letter-spacing 3px
		margin 0
		padding 0
		line-height 1em
		font-family $f2
		color $white
		text-transform uppercase
		display inline-block
		position relative
		&::before, &::after
			content '\e870'
			position absolute
			font-family 'Linearicons-Free'
			top 0
			font-size 16px
		&::before
			left -46px
		&::after
			right -46px

@media (max-width: 768px)
	.page-title h1
		font-size 46px
	
@media (max-width: 480px)
	.page-title h1
		font-size 22px
		&::before
			left -26px
		&::after
			right -26px

/*----------------------*/ 
/*   09-BREADCRUMBS     */ 
/*----------------------*/

.breadcrumbs
	margin-top 30px
	ul
		display inline-block
		margin 0
		padding 0
		li
			float left
			color $white
			+li::before
				content '/'
				margin 0 3px
			a:hover
				text-decoration none
