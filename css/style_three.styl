		bottom 0
		opacity 1
					
/*----------------------*/ 
/*   19-TESTIMONIAL     */ 
/*----------------------*/


.testimonial-wrap
	position relative
	text-align center
	.owl-item
		width 100%
	h3
		text-transform uppercase
		margin-top 10px
		font-size 16px
		font-family $f1
		color $white
	p
		padding 0 60px
		margin-bottom 0
		color $white
		opacity .8
	.avatar-wrap
		display inline-block
		img
			border-radius 50%
			height 200px
			width 200px

.testimonial-nav
	i
		padding 0 4px
		font-size 22px
		line-height 30px
		color $white
		cursor pointer
		position absolute
		top 50%
		margin-top -11px
		z-index 10
		transition color .3s ease-in-out
		&:hover
			color $cyan
		&.lnr-arrow-left
			left 30px
		&.lnr-arrow-right
